{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "zig build",
            "command": "zig build -freference-trace",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [
                "$gcc"
            ],
